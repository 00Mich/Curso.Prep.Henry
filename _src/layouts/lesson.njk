        </div>
        <div class="row">
          <div id='lesson' class="col-10">
            <div class="row">
              <div id="readingTime">
                    Tiempo de lectura {{ content | readingTime }}
              </div>
            </div>

            {# Lesson (markdown content) #}
            {{ content | safe }}

          </div>
          <div id='sidebar' class="col-2">

            {# Table of contents #}
            {{ content | toc | safe }}

          </div>
        </div>
      </div>
